<!-- views/description.ejs -->
<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Edit</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <!--<style>
        body        { padding-top:80px; }
    </style>
    -->
    <script src="/scripts/NavigationBar.js"></script>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default" id="navBar">
        <script>
            fetchNavigationBar(<%=user_id%>)
        </script>
    </nav>
    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-pencil-square-o"></span> Edit</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0 ) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/description" method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" value="<%= name%>">
            </div>
            <div class="form-group">
                <label>Surname</label>
                <input type="text" class="form-control" name="surname" value="<%= surname%>">
            </div>
            <div class="form-group">
                <label>Birth</label>
                <div class='input-group date' id='datetimepicker' style="cursor: pointer">
                    <input type='text' name="birth" id="birthTime" class="form-control" value="<%= birth%>">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <script type="text/javascript">
                $(function () {
                    $("#datetimepicker").datepicker({
                        autoclose: true,
                        todayHighlight: true,
                        format: "yyyy-mm-dd",
                    });//.datepicker('update', new Date());
                });
            </script>
            <div class="form-group">
                <label>vk profile</label>
                <input type="text" class="form-control" name="vk_profile" value="<%= vk_profile%>">
            </div>
            <div class="form-group">
                <label>e-mail</label>
                <input type="text" class="form-control" name="email" value="<%= email%>">
            </div>
            <div class="form-group">
                <label for="select_sex">Sex</label>
                <select class="form-control" id="select_sex" name="sex">
                    <% if (sex =='male' ) { %>
                    <option selected>male</option>
                    <option>female</option>
                    <% } else{  %>
                    <% if (sex =='female' ) { %>
                    <option>male</option>
                    <option selected>female</option>
                    <% if (sex.length == 0 ) { %>
                    <option>male</option>
                    <option>female</option>
                    <% }}}  %>
                </select>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="3" name="description" style="resize:vertical"><%= description%></textarea>
            </div>
            <!--<div class="form-group">
                <label>Description</label>
                <input type="text" class="form-control" name="description" value="<%= description%>">
            </div>
            -->

            <button type="submit" class="btn btn-warning btn-md">Submit</button>
        </form>
        <!--<form action="/description" method="get">
            <button type="submit" class="btn btn-warning btn-lg">Separate edit</button>
        </form>-->
        <hr>

        <p>Need an account? <a href="/join">Join</a></p>
        <p>Or go <a href="/">home</a>.</p>

    </div>
</div>
</body>
</html>