<!-- views/description.ejs -->
<!doctype html>
<html>
<head>
    <title>Add Description</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!--<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src="/scripts/NavigationBar.js"></script>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default" id="navBar">
        <script>
            fetchNavigationBar(<%=user_id%>)
        </script>
    </nav>
    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-plus"></span> Add description</h1>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/description" method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label>Surname</label>
                <input type="text" class="form-control" name="surname">
            </div>
            <div class="form-group">
                <label>Birth</label>
                <input type="text" class="form-control" name="birth">
            </div>
            <div class="form-group">
                <label>VK Profile</label>
                <input type="text" class="form-control" name="vk_profile">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label for="select_sex">Sex</label>
                <select class="form-control" id="select_sex" name="sex">
                    <option></option>
                    <option>male</option>
                    <option>female</option>
                </select>
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" rows="2" name="description" style="resize:vertical"></textarea>
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Add info</button>
        </form>

        <hr>

        <p>Need an account? <a href="/join">Join</a></p>
        <p>Or go <a href="/">home</a>.</p>

    </div>
</div>
</body>
</html>